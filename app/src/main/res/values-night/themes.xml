<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OriginalColor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_color</item>
        <item name="colorSurface">@color/black</item>
        <!--Main Background-->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="ColorInfoText">
        <item name="android:textSize">@dimen/copy_text_size</item>
        <item name="drawableEndCompat">@drawable/ic_copy</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--Custom Switch-->
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOutline">#80FF6B6B</item>
        <item name="trackDecorationTint">@color/primary_color</item>
    </style>

    <!--Share Button-->
    <style name="ThemeOverlay.App.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/white</item>
    </style>
</resources>